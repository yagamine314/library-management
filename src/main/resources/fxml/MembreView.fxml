<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx" 
            xmlns:fx="http://javafx.com/fxml" 
            fx:controller="com.library.controller.MembreController"
            prefHeight="700.0" prefWidth="1000.0">
    
    <top>
        <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-background-color: #2c3e50; -fx-padding: 15;">
            <Label text="Gestion des Membres" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <TextField fx:id="searchField" promptText="Rechercher par nom..." onAction="#handleRechercher"/>
            <Button text="Rechercher" onAction="#handleRechercher" style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
        </HBox>
    </top>
    
    <center>
        <SplitPane dividerPositions="0.6">
            <VBox spacing="10" style="-fx-padding: 10;">
                <HBox spacing="10">
                    <Button text="Tous les membres" onAction="#handleRechercher"/>
                    <Button text="Membres Actifs" onAction="#handleAfficherActifs"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Button text="+ Nouveau" onAction="#handleNouveau" style="-fx-background-color: #27ae60; -fx-text-fill: white;"/>
                </HBox>
                
                <TableView fx:id="membresTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="idCol" text="ID" prefWidth="50"/>
                        <TableColumn fx:id="nomCol" text="Nom" prefWidth="100"/>
                        <TableColumn fx:id="prenomCol" text="Prénom" prefWidth="100"/>
                        <TableColumn fx:id="emailCol" text="Email" prefWidth="150"/>
                        <TableColumn fx:id="statutCol" text="Statut" prefWidth="80"/>
                    </columns>
                </TableView>
            </VBox>

            <VBox spacing="15" style="-fx-padding: 10; -fx-background-color: #f4f4f4;">
                <Label text="Détails du Membre" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                
                <GridPane hgap="10" vgap="10">
                    <columnConstraints>
                        <ColumnConstraints minWidth="100" prefWidth="100" />
                        <ColumnConstraints hgrow="ALWAYS" />
                    </columnConstraints>
                    
                    <Label text="ID:"/>
                    <TextField fx:id="idField" editable="false" GridPane.columnIndex="1"/>
                    
                    <Label text="Nom:" GridPane.rowIndex="1"/>
                    <TextField fx:id="nomField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                    
                    <Label text="Prénom:" GridPane.rowIndex="2"/>
                    <TextField fx:id="prenomField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                    
                    <Label text="Email:" GridPane.rowIndex="3"/>
                    <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                    
                    <Label text="Adhésion:" GridPane.rowIndex="4"/>
                    <DatePicker fx:id="dateAdhesionPicker" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
                    
                    <Label text="Statut:" GridPane.rowIndex="5"/>
                    <CheckBox fx:id="actifCheckBox" text="Compte Actif" selected="true" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
                </GridPane>

                <HBox spacing="10" alignment="CENTER">
                    <Button text="Ajouter" onAction="#handleAjouterMembre" style="-fx-background-color: #27ae60; -fx-text-fill: white;"/>
                    <Button text="Modifier" onAction="#handleModifierMembre" style="-fx-background-color: #f39c12; -fx-text-fill: white;"/>
                    <Button text="Supprimer" onAction="#handleSupprimerMembre" style="-fx-background-color: #e74c3c; -fx-text-fill: white;"/>
                </HBox>

                <Separator/>

                <Label text="Historique des Emprunts" style="-fx-font-weight: bold;"/>
                <TableView fx:id="historiqueTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="livreCol" text="Livre" prefWidth="120"/>
                        <TableColumn fx:id="dateEmpruntCol" text="Emprunt" prefWidth="90"/>
                        <TableColumn fx:id="dateRetourCol" text="Retour" prefWidth="90"/>
                        <TableColumn fx:id="statutEmpruntCol" text="Statut" prefWidth="70"/>
                    </columns>
                </TableView>
            </VBox>
        </SplitPane>
    </center>

    <bottom>
        <HBox spacing="20" style="-fx-padding: 10; -fx-background-color: #ecf0f1;">
            <Label text="Actions rapides:"/>
            <Button text="Activer/Désactiver" onAction="#handleActiverDesactiver"/>
        </HBox>
    </bottom>
</BorderPane>
<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.lang.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.library.controller.EmpruntController"
      prefHeight="600.0" prefWidth="800.0" spacing="10.0"
      style="-fx-padding: 20;">

    <Label text="Gestion des Emprunts" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <!-- Section Nouvel Emprunt -->
    <TitledPane text="Nouvel Emprunt" collapsible="false">
        <VBox spacing="10.0" style="-fx-padding: 10;">
            <HBox spacing="10.0" alignment="CENTER_LEFT">
                <Label text="ISBN du livre:" prefWidth="100.0" />
                <TextField fx:id="isbnField" promptText="Entrez l'ISBN" prefWidth="150.0" />

                <Label text="ID du membre:" prefWidth="100.0" />
                <TextField fx:id="membreIdField" promptText="Entrez l'ID" prefWidth="100.0" />

                <Label text="Date retour prévue:" prefWidth="120.0" />
                <DatePicker fx:id="dateRetourPrevuePicker" prefWidth="150.0" />

                <Button fx:id="empruntButton" text="Emprunter" onAction="#handleEmprunter"
                        style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />
            </HBox>
        </VBox>
    </TitledPane>

    <!-- Section Retour de Livre -->
    <TitledPane text="Retour de Livre" collapsible="false">
        <VBox spacing="10.0" style="-fx-padding: 10;">
            <HBox spacing="10.0" alignment="CENTER_LEFT">
                <Label text="ID de l'emprunt:" prefWidth="100.0" />
                <TextField fx:id="empruntIdRetourField" promptText="Entrez l'ID de l'emprunt" prefWidth="200.0" />
                <Button fx:id="retourButton" text="Retourner" onAction="#handleRetourner"
                        style="-fx-background-color: #2196F3; -fx-text-fill: white;" />
            </HBox>
        </VBox>
    </TitledPane>

    <!-- Table des Emprunts -->
    <TitledPane text="Liste des Emprunts" VBox.vgrow="ALWAYS" collapsible="false">
        <VBox spacing="10.0" style="-fx-padding: 10;" VBox.vgrow="ALWAYS">
            <HBox spacing="10.0" alignment="CENTER_LEFT">
                <Button fx:id="refreshButton" text="Actualiser" onAction="#handleRefresh"
                        style="-fx-background-color: #FF9800; -fx-text-fill: white;" />
                <Label fx:id="statusLabel" text="" style="-fx-text-fill: #666;" HBox.hgrow="ALWAYS" />
            </HBox>

            <TableView fx:id="empruntsTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="50.0" />
                    <TableColumn fx:id="colIsbnLivre" text="ISBN Livre" prefWidth="120.0" />
                    <TableColumn fx:id="colIdMembre" text="ID Membre" prefWidth="80.0" />
                    <TableColumn fx:id="colDateEmprunt" text="Date Emprunt" prefWidth="100.0" />
                    <TableColumn fx:id="colDateRetourPrevue" text="Retour Prévu" prefWidth="100.0" />
                    <TableColumn fx:id="colDateRetourEffective" text="Retour Effectif" prefWidth="100.0" />
                    <TableColumn fx:id="colPenalite" text="Pénalité (€)" prefWidth="80.0" />
                </columns>
            </TableView>
        </VBox>
    </TitledPane>

</VBox>
